<div class="devise-panel" style="margin-left:auto;margin-right:auto;max-width: 555px ;margin-top: 100px">



<h2>注册</h2>

<%= form_for( resource,as: resource_name, url: registration_path(resource_name),:html => {:class => 'am-form'} ) do |f|  %>
  <%= devise_error_messages! %>

  <div class="am-form-group">
    <%= f.label :电子邮件 %><br />
    <%= f.email_field :email, autofocus: true ,:id => 'doc-ipt-pwd-1'%>
  </div>


      <div class="am-form-group">
        <%= f.label :用户名%><br />
        <%= f.text_field :username, autofocus: true ,:id => 'doc-ipt-pwd-1'%>
      </div>

  <div class="am-form-group">
    <%= f.label :密码 %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 位最小)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:id => 'doc-ipt-pwd-1'%>
  </div>

  <div class="am-form-group">
    <%= f.label :确认密码 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:id => 'doc-ipt-pwd-1' %>
  </div>

  <div class="actions">
    <%= f.submit "注册" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>